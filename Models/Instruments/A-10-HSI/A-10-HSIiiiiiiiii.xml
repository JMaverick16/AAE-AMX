  <!-- pick -->
   <animation>
    <type>pick</type>
    <object-name>hotspot-course-set-Dec</object-name>
    <visible>false</visible>
    <action>
      <name>small decrease</name>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <name>large decrease</name>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <step>-5</step>
