<?xml version="1.0"?>

<PropertyList>
  <!-- horizontal situation indicator -->
  <name>HSI</name>
  <path>A-10-HSI.ac</path>

  <animation>
    <type>rotate</type>
    <object-name>HSI-compass-card</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/hsi</property>
        <value>24</value>
      </greater-than>
    </condition>
    <property>orientation/heading-magnetic-deg</property> 
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
 
  <!-- needle #1 = DF -->
	<animation>
		<type>select</type>
		<object-name>bearing-needle-1</object-name>
		<condition>
			<property>instrumentation/nav[0]/in-range</property>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>bearing-needle-1</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis><x>1</x></axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>bearing-needle-1</object-name>
		<property>instrumentation/nav[0]/heading-deg</property>
		<condition>
			<equals>
				<property>sim/model/AAE-AMX/instrumentation/an-arc-182v/mode</property>
				<value>3</value>
			</equals>
		</condition>
		<axis><x>-1</x></axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>bearing-needle-1-off</object-name>
		<condition>
			<not>
				<property>instrumentation/nav[0]/in-range</property>
			</not>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>bearing-needle-1-off</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis><x>1</x></axis>
	</animation>
	
	<!-- needle #2 = TACAN -->
	<animation>
		<type>select</type>
		<object-name>bearing-needle-2</object-name>
		<condition>
			<property>instrumentation/tacan/in-range</property>
			<or>
				<equals>
					<property>sim/model/AAE-AMX/instrumentation/tacan/mode</property>
					<value>1</value>
				</equals>
				<equals>
					<property>sim/model/AAE-AMX/instrumentation/tacan/mode</property>
					<value>2</value>
				</equals>
			</or>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>bearing-needle-2</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis><x>1</x></axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>bearing-needle-2</object-name>
		<property>instrumentation/tacan/indicated-mag-bearing-deg</property>
		<axis><x>-1</x></axis>
	</animation>

	<animation>
		<type>select</type>
		<object-name>bearing-needle-2-off</object-name>
		<condition>
			<or>
				<not>
					<property>instrumentation/tacan/in-range</property>
				</not>
				<equals>
					<property>sim/model/AAE-AMX/instrumentation/tacan/mode</property>
					<value>0</value>
				</equals>
				<equals>
					<property>sim/model/AAE-AMX/instrumentation/tacan/mode</property>
					<value>3</value>
				</equals>
				<equals>
					<property>sim/model/AAE-AMX/instrumentation/tacan/mode</property>
					<value>4</value>
				</equals>
			</or>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>bearing-needle-2-off</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis><x>1</x></axis>
	</animation>
	
	
	
	
  <animation>
    <type>select</type>
    <object-name>miles-flag</object-name>
    <condition>
      <or>
        <equals>
          <property>instrumentation/tacan/in-range</property>
          <value>false</value>
        </equals>
        <equals>
          <property>instrumentation/tacan/mode</property>
          <value>0</value>
        </equals>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>off-flag</object-name>
    <condition>
      <less-than>
        <property>systems/electrical/outputs/hsi</property>
        <value>24</value>
      </less-than>
    </condition>
  </animation>

<!-- tacan distance digital display -->
  <animation>
    <type>textranslate</type>
    <object-name>miles-drum-1</object-name>
    <property>instrumentation/tacan/indicated-distance-nm</property>
    <factor>0.1</factor>
    <offset>-1</offset>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
